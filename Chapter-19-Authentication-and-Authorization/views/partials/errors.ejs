<% if(errors && errors.length > 0) { %>
<div
  class="bg-gradient-to-r from-red-50 to-red-100 border-l-4 border-red-500 text-red-700 p-5 rounded-lg shadow-sm mb-6 relative animate-fadeIn"
  role="alert">
  <div class="flex items-start">
    <div class="flex-shrink-0 mr-3">
      <i class="fas fa-exclamation-circle text-red-500 text-xl mt-0.5"></i>
    </div>
    <div class="flex-grow">
      <h3 class="font-bold text-lg mb-1">Error</h3>
      <ul class="list-disc pl-5 space-y-1 text-red-600">
        <% errors.forEach(error => { %>
        <li class="text-sm md:text-base"><%= error %></li>
        <% }) %>
      </ul>
    </div>
    <button
      class="absolute top-3 right-3 text-red-500 hover:text-red-700 transition duration-200"
      aria-label="Close alert">
      <i class="fas fa-times"></i>
    </button>
  </div>
</div>
<% } %>