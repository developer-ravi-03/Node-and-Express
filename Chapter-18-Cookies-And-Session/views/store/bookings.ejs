<%- include('../partials/head') %>
</head>
<body class="bg-gray-100 font-sans">
  <!-- Navbar -->
  <%- include('../partials/nav') %>

  <!-- Main Content -->
  <main class="flex items-center justify-center min-h-screen py-10 px-6">
    
    <!-- Booking Form Container -->
    <div class="bg-white shadow-xl rounded-2xl p-10 max-w-2xl w-full border border-gray-200 animate-fade-in">
      
      <!-- Title -->
      <h2 class="text-4xl font-bold text-gray-900 text-center mb-6">Book Your Stay</h2>
      <p class="text-gray-600 text-center mb-6">Fill in your details and reserve your home today.</p>

      <!-- Booking Form -->
      <form action="/book" method="POST" class="space-y-5">
        
        <!-- Name -->
        <div>
          <label for="name" class="block text-gray-700 font-semibold">Full Name</label>
          <input type="text" id="name" name="name" required class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
        </div>

        <!-- Email -->
        <div>
          <label for="email" class="block text-gray-700 font-semibold">Email</label>
          <input type="email" id="email" name="email" required class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
        </div>

        <!-- Check-in & Check-out Dates -->
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-5">
          <div>
            <label for="checkin" class="block text-gray-700 font-semibold">Check-in Date</label>
            <input type="date" id="checkin" name="checkin" required class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
          </div>
          <div>
            <label for="checkout" class="block text-gray-700 font-semibold">Check-out Date</label>
            <input type="date" id="checkout" name="checkout" required class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
          </div>
        </div>

        <!-- Guests -->
        <div>
          <label for="guests" class="block text-gray-700 font-semibold">Number of Guests</label>
          <select id="guests" name="guests" required class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none">
            <option value="1">1 Guest</option>
            <option value="2">2 Guests</option>
            <option value="3">3 Guests</option>
            <option value="4">4 Guests</option>
            <option value="5+">5+ Guests</option>
          </select>
        </div>

        <!-- Special Requests -->
        <div>
          <label for="requests" class="block text-gray-700 font-semibold">Special Requests (Optional)</label>
          <textarea id="requests" name="requests" rows="3" class="w-full mt-1 p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none"></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-purple-500 text-white font-semibold py-3 rounded-lg shadow-md hover:scale-105 transition duration-300 hover:shadow-xl">
          Confirm Booking
        </button>

      </form>
    </div>

  </main>
</body>
</html>
