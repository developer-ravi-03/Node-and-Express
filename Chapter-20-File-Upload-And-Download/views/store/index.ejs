<%- include('../partials/head') %>
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <%- include('../partials/nav') %>
    <!-- Main Content -->
    <main class="flex items-center justify-center min-h-screen py-8 px-6">
      <div
        class="bg-white shadow-xl rounded-2xl p-8 max-w-2xl w-full border border-gray-200">
        <h2
          class="text-5xl font-extrabold text-gray-900 mb-6 text-center border-b-4 border-gray-300 pb-4">Welcome to air bnb index page</h2>
          <div class="flex flex-wrap justify-center gap-6">
            <% registeredHomes.forEach(home => { %>
            <div class="bg-white shadow-lg rounded-lg overflow-hidden border border-gray-200 hover:shadow-xl transition duration-300 mb-8">
              <img src="<%= home.photo %>" alt="Home Image" class="w-full h-56 object-cover">
              <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-900 mb-2"><%= home.home %></h3>
                <p class="text-gray-600"><i class="fas fa-map-marker-alt text-red-500"></i> <%= home.Location %></p>
                <div class="flex justify-between items-center mt-4">
                  <span class="text-lg font-semibold text-red-500">$<%= home.price %> / night</span>
                  <span class="flex items-center text-yellow-500 font-semibold">
                    <i class="fas fa-star"></i> <%= home.rating %>
                  </span>
                </div>
                <button class="mt-5 w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition duration-300">
                  Book Now
                </button>
              </div>
            </div>
            <% }); %>
          </div>
          
      </div>
    </main>
  </body>
</html>
